<%= render "core/navbar_generic" %>
<div class="banner page-banner d-flex align-items-center" style="height: 50vh">
  <div class="container">
    <div class="row">
      <div class="col-6 p-3 d-flex align-items-center">
        <div>
          <h1 class="mb-3 banner-h1-m">Saved <span>Lists</span>!</h1>
          <%= link_to "Add a Movie list", new_list_path, class: "btn btn-core btn-sm" %>
        </div>
      </div>
      <div class="col-6 p-3">
      </div>
    </div>
  </div>
</div>
<div class="mid-container">
  <div class="container p-3"  style="height: 500px">
    <div class="lists d-flex justify-content-between">
      <% @lists.each do |list| %>
        <div class="d-flex p-4 border rounded-5" style="background-image: url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>)">
          <h2><%= link_to "#{list.name}", list_path(list), class: "text-light hover-link" %></h2>
          <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="footer-banner"></div>
