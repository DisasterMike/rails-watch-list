<%= render "core/navbar_generic" %>
<div class="banner page-banner d-flex align-items-center" style="height: 50vh">
  <div class="container">
    <div class="row">
      <div class="col-6 p-3 d-flex align-items-center">
        <div>
          <h1 class="mb-3 banner-h1-m"><span>Lists</span> created by <span>you</span>!</h1>
          <%= link_to "Add a Movie list", new_list_path, class: "btn btn-core btn-sm" %>
        </div>
      </div>
      <div class="col-6 p-3">
      </div>
    </div>
  </div>
</div>
<div class="mid-container">
  <div class="container">
    <div class="lists-container py-3">
      <% if @lists.any? %>
        <%= render "list_items" %>
      <% else %>
        <div style="height: 20vh">
          <h2>You don't have any lists yet.</h2>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="footer-banner" style="height: 15vh"></div>
